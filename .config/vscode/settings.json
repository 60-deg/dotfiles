{
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.closeEmptyGroups": false,
  "update.showReleaseNotes": false,

  // 統合ターミナル
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.fontFamily": "RobotoMono Nerd Font Mono",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.cursorStyle": "line",

  // 色の設定
  "workbench.colorCustomizations": {
    "terminal.background": "#b8b7b7",
    "panel.border": "#6b5d93",
    "panel.background": "#e0e0e0",
    "editorGroup.border": "#6b5d93",
    "editorGroupHeader.tabsBackground": "#e7e7e7",
    "editorGroupHeader.tabsBorder": "#b4aacb",
    "editorIndentGuide.activeBackground": "#b4aacb",
    "editorIndentGuide.background": "#e0e0e0",
    "editor.findMatchBackground": "#0471ff3d",
    "editor.findMatchHighlightBackground": "#6eaaf83b",
    "editorWhitespace.foreground": "#d6d6d6",
    "editor.selectionBackground": "#999999a2",
    "titleBar.activeBackground": "#001ea3",
    "statusBar.background": "#001366",
    "sideBar.background": "#6eaaf81e",
    "sideBarSectionHeader.background": "#006eff1e",
    "sideBar.dropBackground": "#006eff05",
    "activityBar.background": "#006eff21",
    "activityBar.inactiveForeground": "#001ea34b",
    "activityBar.foreground": "#001ea3",
    "editor.lineHighlightBackground": "#2f00ff15",
    "editor.background": "#f1f4fa"
  },

  // ウィンドウ
  "window.zoomLevel": 0,

  // エディタ
  "workbench.colorTheme": "Quiet Light",
  "editor.fontFamily": "Myrica M, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.wrappingIndent": "indent",
  "editor.formatOnSave": true,
  "editor.formatOnType": false,
  "editor.detectIndentation": true,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "explorer.confirmDelete": false,
  "editor.renderWhitespace": "boundary",
  "editor.minimap.enabled": false,
  "editor.snippetSuggestions": "top",
  "editor.tabCompletion": "on",
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "editor.renderIndentGuides": true,
  "editor.highlightActiveIndentGuide": true,
  "editor.trimAutoWhitespace": false,
  "editor.suggestSelection": "first",

  // 検索
  "search.quickOpen.includeSymbols": true,
  "search.useReplacePreview": false,

  // emmet
  "emmet.showSuggestionsAsSnippets": true,

  // vs intellicode
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  // files associations
  "files.associations": {
    "*.js": "javascript",
    "*.scss": "scss"
  },

  // C言語
  "C_Cpp.clang_format_style": "{ BasedOnStyle: LLVM, IndentWidth: 2, TabWidth: 2, UseTab: Always,  Standard: Auto, AllowShortIfStatementsOnASingleLine: true, AllowShortLoopsOnASingleLine: true, AllowShortFunctionsOnASingleLine: Empty, MaxEmptyLinesToKeep: 1, ReflowComments: false }",

  // Golang
  "go.lintOnSave": "package",
  "[go]": {
    "editor.insertSpaces": false,
    "editor.formatOnSave": false
  },
  "go.formatTool": "goimports",
  "go.gopath": "~/Developer/go",
  "go.inferGopath": true,

  // latex
  "latex-workshop.message.update.show": false,
  "latex-workshop.latex.autoBuild.cleanAndRetry.enabled": false,
  "latex-workshop.latex.autoBuild.run": "never",
  "latex-workshop.synctex.afterBuild.enabled": false,

  // prettier
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "prettier.jsxSingleQuote": true,

  // typescript
  "typescript.format.enable": false,
  "typescript.format.insertSpaceBeforeFunctionParenthesis": true,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
  "typescript.preferences.quoteStyle": "single",

  // javascript
  "[javascript]": {
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  "javascript.preferences.quoteStyle": "single",
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
  "javascript.format.insertSpaceAfterConstructor": true,

  // vue
  "vetur.format.options.tabSize": 2,
  "vetur.format.defaultFormatter.js": "vscode-typescript",
  "pugvuebeautify.omitDiv": true,

  // html
  "html.format.indentInnerHtml": true,
  "html.autoClosingTags": true,
  "html.format.enable": false,

  // scss
  "[scss]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },

  // markdown-pdf
  "markdown-pdf.displayHeaderFooter": false,
  "markdown-pdf.headerTemplate": "",
  "markdown-pdf.footerTemplate": "<div style=\"font-size: 9px; margin: 0 auto;\"> <span class='pageNumber'></span> / <span class='totalPages'></span></div>",
  "markdown-pdf.margin.bottom": "2cm",
  "markdown-pdf.margin.left": "2cm",
  "markdown-pdf.margin.right": "2cm",
  "markdown-pdf.margin.top": "2.5cm",
  "markdown-pdf.breaks": true,
  "markdown-pdf.convertOnSave": false,

  // java
  "java.errors.incompleteClasspath.severity": "ignore",

  // verilog
  "verilog.linting.linter": "iverilog",

  // yaml
  "yaml.schemas": {
    "https://raw.githubusercontent.com/kogosoftwarellc/open-api/master/packages/openapi-schema-validator/resources/openapi-3.0.json": [
      "*swagger.yaml",
      "*swagger.yml"
    ]
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // nginx
  "[NGINX]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": false
  },

  // vsNotes
  "vsnotes.defaultNotePath": "~/Library/Mobile Documents/9CR7T2DMDG~com~ngocluu~onewriter/Documents/notes",
  "vsnotes.defaultNoteTitle": "{title}.{ext}"

  // others
}
