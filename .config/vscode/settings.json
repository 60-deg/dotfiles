{
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.closeEmptyGroups": false,
  "update.showReleaseNotes": false,
  // 統合ターミナル
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.fontFamily": "SF Mono, RobotoMono Nerd Font Mono, monospace, serif",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.rendererType": "dom",
  // ウィンドウ
  "window.zoomLevel": 0,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,
  // エディタ
  "workbench.colorTheme": "yto60",
  "workbench.editor.showTabs": false,
  "workbench.iconTheme": "vscode-icons",
  "workbench.statusBar.visible": true,
  "material-icon-theme.folders.color": "#90a4ae",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "editor.fontFamily": "Myrica M, Cica, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.wrappingIndent": "indent",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  "editor.formatOnType": false,
  "editor.detectIndentation": true,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.renderWhitespace": "none",
  "editor.minimap.enabled": false,
  "editor.snippetSuggestions": "top",
  "editor.tabCompletion": "on",
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "editor.renderIndentGuides": true,
  "editor.highlightActiveIndentGuide": true,
  "editor.trimAutoWhitespace": false,
  "editor.suggestSelection": "first",
  // 検索
  "search.quickOpen.includeSymbols": true,
  "search.useReplacePreview": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/dist": true
  },
  // emmet
  "emmet.showSuggestionsAsSnippets": true,
  // vs intellicode
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  // eslint
  "eslint.validate": [
    "javascript",
    "typescript",
    "javascriptreact",
    "vue",
    "vue-html"
  ],
  "eslint.run": "onType",
  // C言語
  "C_Cpp.clang_format_style": "{ BasedOnStyle: LLVM, IndentWidth: 2, TabWidth: 2, UseTab: Never,  Standard: Auto, AllowShortIfStatementsOnASingleLine: true, AllowShortLoopsOnASingleLine: true, AllowShortFunctionsOnASingleLine: Empty, MaxEmptyLinesToKeep: 1, ReflowComments: false }",
  // Golang
  "go.lintOnSave": "package",
  "go.formatTool": "goimports",
  "go.gopath": "~/Developer/go",
  "go.inferGopath": true,
  // latex
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-outdir=%OUTDIR%",
        "%DOC%"
      ],
      "env": {}
    }
  ],
  "latex-workshop.latex.outDir": "%DIR%/build",
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.view.pdf.zoom": "page-width",
  "latex-workshop.latex.autoBuild.run": "never",
  // javascript
  "[javascript]": {
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "javascript.format.enable": false,
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  "javascript.preferences.quoteStyle": "single",
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingJsxExpressionBraces": true,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
  "javascript.format.insertSpaceAfterConstructor": true,
  // typescript
  "[typescript]": {
    // "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.tabSize": 2,
    "editor.formatOnSave": false
  },
  "typescript.format.enable": false,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": true,
  "typescript.preferences.quoteStyle": "single",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.renameShorthandProperties": false,
  // vue
  "vetur.format.enable": false,
  "vetur.format.options.tabSize": 2,
  "vetur.format.defaultFormatter.js": "vscode-typescript",
  "pugvuebeautify.omitDiv": false,
  "vetur.format.defaultFormatter.ts": "prettier",
  "vetur.format.defaultFormatter.html": "prettier",
  "vetur.experimental.templateInterpolationService": true,
  "vetur.validation.script": true,
  "vetur.validation.template": true,
  // html
  "html.format.indentInnerHtml": true,
  "html.autoClosingTags": true,
  "html.format.enable": false,
  // scss
  "[scss]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  // java
  "java.errors.incompleteClasspath.severity": "ignore",
  "java.configuration.checkProjectSettingsExclusions": false,
  "java.home": "/Library/Java/JavaVirtualMachines/openjdk-12.0.1.jdk/Contents/Home",
  //php
  "[php]": {
    "editor.formatOnSave": true
  },
  // verilog
  "verilog.linting.linter": "iverilog",
  // json
  "json.schemas": [
    {
      "http://json.schemastore.org/tsconfig": ["tsconfig.json"]
    }
  ],
  // yaml
  "yaml.schemas": {
    "https://raw.githubusercontent.com/kogosoftwarellc/open-api/master/packages/openapi-schema-validator/resources/openapi-3.0.json": [
      "*swagger.yaml",
      "*swagger.yml"
    ],
    "http://json.schemastore.org/ansible-stable-2.5": ["main.yml"]
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // nginx
  "[NGINX]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": false
  },
  // git
  "git.enableSmartCommit": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "gitlens.codeLens.enabled": false,
  // prettier
  "prettier.semi": false,
  "prettier.singleQuote": true,
  // (Extension) markdown-pdf
  "markdown-pdf.displayHeaderFooter": false,
  "markdown-pdf.headerTemplate": "",
  "markdown-pdf.footerTemplate": "<div style=\"font-size: 9px; margin: 0 auto;\"> <span class='pageNumber'></span> / <span class='totalPages'></span></div>",
  "markdown-pdf.margin.bottom": "2cm",
  "markdown-pdf.margin.left": "2cm",
  "markdown-pdf.margin.right": "2cm",
  "markdown-pdf.margin.top": "2.5cm",
  "markdown-pdf.breaks": true,
  "markdown-pdf.convertOnSave": false,
  // (Extension) vsNotes
  "vsnotes.defaultNotePath": "~/Library/Mobile Documents/9CR7T2DMDG~com~ngocluu~onewriter/Documents/notes",
  "vsnotes.defaultNoteTitle": "{title}.{ext}",
  // (Extension) indent rainbow
  // colorful
  // "indentRainbow.colors": [
  //   "rgba(249,219,227,0.2)",
  //   "rgba(193,229,220,0.2)",
  //   "rgba(206,191,219,0.2)",
  //   "rgba(225,251,128,0.2)"
  // ],
  // monochrome
  "indentRainbow.colors": [
    "rgba(205,208,217,0.15)",
    "rgba(164,166,171,0.15)",
    "rgba(99,100,102,0.1)",
    "rgba(42,43,45,0.1)"
  ],
  // (Extension) LiveServer
  "liveServer.settings.host": "localhost",
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  // (Extension) Bracket Pair Colorizer
  "bracket-pair-colorizer-2.colors": [
    "Blue",
    "SkyBlue",
    "Green",
    "Orchid",
    "Gold"
  ],
  // others
  "maven.terminal.useJavaHome": true,
  "task.autoDetect": "off",
  "vsicons.dontShowNewVersionMessage": true,
  "files.associations": {
    "*.html": "html",
    "*.fish": "shellscript"
  },
  "C_Cpp.updateChannel": "Insiders",
  "regex-previewer.enableCodeLens": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "latex-workshop.message.update.show": false,
  "terminal.integrated.shell.osx": "/bin/zsh"
}
